---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<main class="bg-white container mx-auto px-4 py-16 dark:bg-slate-900 pt-32">
  <h1 class="text-3xl md:text-4xl font-bold mb-8 text-slate-900 dark:text-white">{t("specs.title")}</h1>
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-slate-800 dark:text-slate-200">{t("specs.supportedOS.title")}</h2>
    <table class="w-full max-w-2xl mb-6 border border-slate-300 dark:border-slate-700 rounded-lg overflow-hidden">
      <thead class="bg-cyan-50 dark:bg-slate-800">
        <tr>
          <th class="py-2 px-4 text-left text-slate-900 dark:text-white">{t("specs.supportedOS.os")}</th>
          <th class="py-2 px-4 text-left text-slate-900 dark:text-white">{t("specs.supportedOS.architecture")}</th>
          <th class="py-2 px-4 text-left text-slate-900 dark:text-white">{t("specs.supportedOS.status")}</th>
          <th class="py-2 px-4 text-left text-slate-900 dark:text-white">{t("specs.supportedOS.notes")}</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-slate-900">
        <tr>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">Windows 10/11</td>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">x64</td>
          <td class="py-2 px-4 text-2xl">âœ…</td>
          <td class="py-2 px-4 text-slate-700 dark:text-slate-300">{t("specs.supportedOS.windows.notes")}</td>
        </tr>
        <tr>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">Linux (Debian/Ubuntu, RPM-based, AppImage)</td>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">x64</td>
          <td class="py-2 px-4 text-2xl">ðŸŸ¡</td>
          <td class="py-2 px-4 text-slate-700 dark:text-slate-300">{t("specs.supportedOS.linux.notes")}</td>
        </tr>
        <tr>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">macOS</td>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">Apple Silicon, Intel (x64)</td>
          <td class="py-2 px-4 text-2xl">ðŸš§</td>
          <td class="py-2 px-4 text-slate-700 dark:text-slate-300">{t("specs.supportedOS.macos.notes")}</td>
        </tr>
      </tbody>
    </table>
  </section>
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-slate-800 dark:text-slate-200">{t("specs.supportedHardware.title")}</h2>
    <table class="w-full max-w-2xl mb-6 border border-slate-300 dark:border-slate-700 rounded-lg overflow-hidden">
      <thead class="bg-cyan-50 dark:bg-slate-800">
        <tr>
          <th class="py-2 px-4 text-left text-slate-900 dark:text-white">{t("specs.supportedHardware.component")}</th>
          <th class="py-2 px-4 text-left text-slate-900 dark:text-white">{t("specs.supportedHardware.supported")}</th>
          <th class="py-2 px-4 text-left text-slate-900 dark:text-white">{t("specs.supportedOS.status")}</th>
          <th class="py-2 px-4 text-left text-slate-900 dark:text-white">{t("specs.supportedOS.notes")}</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-slate-900">
        <tr>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">CPU</td>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">Intel, AMD (x64)</td>
          <td class="py-2 px-4 text-2xl">âœ…</td>
          <td class="py-2 px-4 text-slate-700 dark:text-slate-300">{t("specs.supportedHardware.cpu.notes")}</td>
        </tr>
        <tr>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">GPU (NVIDIA)</td>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">NVIDIA</td>
          <td class="py-2 px-4 text-2xl">âœ…</td>
          <td class="py-2 px-4 text-slate-700 dark:text-slate-300">{t("specs.supportedHardware.nvidia.notes")}</td>
        </tr>
        <tr>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">GPU (AMD)</td>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">AMD</td>
          <td class="py-2 px-4 text-2xl">ðŸŸ¡</td>
          <td class="py-2 px-4 text-slate-700 dark:text-slate-300">{t("specs.supportedHardware.amd.notes")}</td>
        </tr>
        <tr>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">GPU (Intel)</td>
          <td class="py-2 px-4 text-slate-800 dark:text-slate-200">Intel</td>
          <td class="py-2 px-4 text-2xl">ðŸŸ¡</td>
          <td class="py-2 px-4 text-slate-700 dark:text-slate-300">{t("specs.supportedHardware.intel.notes")}</td>
        </tr>
      </tbody>
    </table>
  </section>
  <section>
    <h2 class="text-2xl font-semibold mb-4 text-slate-800 dark:text-slate-200">{t("specs.limitations.title")}</h2>
    <ul class="list-disc pl-6 space-y-2 text-slate-700 dark:text-slate-200">
      <li>{t("specs.limitations.item1")}</li>
      <li>{t("specs.limitations.item2")}</li>
      <li>{t("specs.limitations.item3")}</li>
      <li>{t("specs.limitations.item4")}</li>
    </ul>
  </section>
</main>
