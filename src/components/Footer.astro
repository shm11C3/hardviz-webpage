---
import { Image } from "astro:assets";
import { ChevronRight, ExternalLink, Github } from "lucide-react";
import appIcon from "../assets/app-icon.png";
import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
} from "../i18n/utils";
import { githubRepoUrl } from "../lib/github";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { translatePath } = useTranslatedPath(lang);

const footerLinks = [
  {
    title: t("footer.product"),
    links: [
      {
        name: t("footer.features"),
        href: translatePath("/#features"),
        external: false,
      },
      {
        name: t("footer.download"),
        href: translatePath("/#download"),
        external: false,
      },
      {
        name: t("footer.specs"),
        href: translatePath("/specs"),
        external: false,
      },
      { name: t("footer.faq"), href: translatePath("/faq"), external: false },
      {
        name: t("footer.changelog"),
        href: translatePath("/changelog"),
        external: false,
      },
    ],
  },
  {
    title: t("footer.resources"),
    links: [
      {
        name: t("footer.github"),
        href: githubRepoUrl(),
        external: true,
      },
      {
        name: t("footer.reportIssue"),
        href: `${githubRepoUrl()}/issues`,
        external: true,
      },
      {
        name: t("footer.deepwiki"),
        href: "https://deepwiki.com/shm11C3/HardwareVisualizer",
        external: true,
      },
    ],
  },
  {
    title: t("footer.community"),
    links: [
      {
        name: t("footer.discussions"),
        href: `${githubRepoUrl()}/discussions`,
        external: true,
      },
    ],
  },
];
---

<footer
  class="bg-white text-black dark:bg-slate-900 dark:text-white pt-16 pb-8"
>
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <div>
        <div class="flex items-center gap-2 mb-4">
          <Image src={appIcon} alt="Logo" class="h-8 w-8" />
          <span class="font-bold text-xl text-black dark:text-white"
            >HardwareVisualizer</span
          >
        </div>
        <p class="text-slate-600 dark:text-slate-400 mb-4">
          {t("footer.description")}
        </p>
        <div class="flex gap-4">
          <a
            href={githubRepoUrl()}
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-600 dark:text-slate-400 hover:text-black dark:hover:text-white transition-colors"
            aria-label="GitHub"
          >
            <Github className="w-5 h-5" />
          </a>
        </div>
      </div>

      {footerLinks.map((section) => (
          <div>
            <h3 class="mb-4 font-semibold text-lg">{section.title}</h3>
            <ul class="space-y-2">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="inline-flex items-center gap-1 text-slate-600 transition-colors hover:text-black dark:text-slate-400 dark:hover:text-white"
                    {...(link.external
                      ? { target: "_blank", rel: "noopener noreferrer" }
                      : { "data-astro-prefetch": true })}
                  >
                    {link.name}
                    {link.external ? (
                      <ExternalLink className="h-3 w-3" />
                    ) : (
                      <ChevronRight className="h-3 w-3" />
                    )}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
    </div>
  </div>
</footer>
