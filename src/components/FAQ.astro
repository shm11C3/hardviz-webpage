---
import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
} from "../i18n/utils";
import { githubRepoUrl } from "../lib/github";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { translatePath } = useTranslatedPath(lang);

interface FAQItem {
  question: string;
  answer: string;
  link?: {
    text: string;
    href: string;
  };
}

const faqs: FAQItem[] = [
  {
    question: t("faq.q1"),
    answer: t("faq.a1"),
  },
  {
    question: t("faq.q2"),
    answer: t("faq.a2"),
  },
  {
    question: t("faq.q3"),
    answer: t("faq.a3"),
    link: {
      text: t("faq.specsLink"),
      href: translatePath("/specs"),
    },
  },
  {
    question: t("faq.q4"),
    answer: t("faq.a4"),
  },
  {
    question: t("faq.q5"),
    answer: t("faq.a5"),
  },
  {
    question: t("faq.q6"),
    answer: t("faq.a6"),
    link: {
      text: t("faq.specsLink"),
      href: translatePath("/specs"),
    },
  },
  {
    question: t("faq.q7"),
    answer: t("faq.a7"),
    link: {
      text: t("faq.githubLink"),
      href: `${githubRepoUrl()}/issues`,
    },
  },
];

// FAQPage JSON-LD schema
const faqJsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((faq) => ({
    "@type": "Question",
    name: faq.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: faq.answer,
    },
  })),
};
---

<section id="faq" class="py-20 bg-slate-50 dark:bg-slate-800/50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2
        class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-4"
      >
        {t("faq.title")}
      </h2>
      <p class="text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
        {t("faq.description")}
      </p>
    </div>

    <div class="max-w-3xl mx-auto space-y-4">
      {faqs.map((faq, index) => (
          <details
            class="group rounded-lg border border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-900"
            id={`faq-${index + 1}`}
            open={index === 0}
          >
            <summary class="flex cursor-pointer items-center justify-between p-6 text-left">
              <span class="flex items-start gap-3">
                <span class="flex h-7 w-7 shrink-0 items-center justify-center rounded-full bg-cyan-100 font-bold text-cyan-600 text-sm dark:bg-cyan-900/50 dark:text-cyan-400">
                  Q
                </span>
                <span class="pr-4 font-semibold text-lg text-slate-900 dark:text-white">
                  {faq.question}
                </span>
              </span>
              <span class="ml-2 shrink-0 text-slate-500 transition-transform duration-200 group-open:rotate-180 dark:text-slate-400">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                  focusable="false"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </span>
            </summary>
            <div class="px-6 pb-6 text-slate-600 dark:text-slate-300">
              <div class="ml-0 flex items-start gap-3">
                <span class="flex h-7 w-7 shrink-0 items-center justify-center rounded-full bg-violet-100 font-bold text-sm text-violet-600 dark:bg-violet-900/50 dark:text-violet-400">
                  A
                </span>
                <div class="pt-1">
                  <p>{faq.answer}</p>
                  {faq.link && (
                    <a
                      href={faq.link.href}
                      class="mt-2 inline-flex items-center gap-1 font-medium text-cyan-600 transition-colors hover:text-cyan-700 dark:text-cyan-400 dark:hover:text-cyan-300"
                      {...(faq.link.href.startsWith("http")
                        ? { target: "_blank", rel: "noopener noreferrer" }
                        : { "data-astro-prefetch": true })}
                    >
                      {faq.link.text}
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                        focusable="false"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 5l7 7-7 7"
                        />
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            </div>
          </details>
        ))}
    </div>
  </div>

  <!-- FAQ JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(faqJsonLd)} />
</section>
