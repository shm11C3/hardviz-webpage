---
import { Cpu, Gauge, LineChart, MemoryStick, Shield, Zap } from "lucide-react";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const features = [
  {
    icon: "cpu",
    title: t("features.card1.title"),
    description: t("features.card1.description"),
  },
  {
    icon: "memory",
    title: t("features.card2.title"),
    description: t("features.card2.description"),
  },
  {
    icon: "gauge",
    title: t("features.card3.title"),
    description: t("features.card3.description"),
  },
  {
    icon: "line-chart",
    title: t("features.card4.title"),
    description: t("features.card4.description"),
  },
  {
    icon: "zap",
    title: t("features.card5.title"),
    description: t("features.card5.description"),
  },
  {
    icon: "shield",
    title: t("features.card6.title"),
    description: t("features.card6.description"),
  },
];
---

<section class="py-20 bg-slate-50 dark:bg-slate-900" id="features">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-slate-900 dark:text-white">{t("features.title")}</h2>
      <p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto text-lg">
        {t("features.description")}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        features.map((feature) => (
          <div class="bg-white  dark:bg-slate-800 p-6 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 hover:shadow-md transition-all">
            <div class="w-12 h-12 flex items-center justify-center bg-slate-100 dark:bg-slate-700 rounded-lg mb-4">
              {feature.icon === "cpu" && <Cpu className="w-6 h-6 text-cyan-400" />}
              {feature.icon === "memory" && <MemoryStick className="w-6 h-6 text-purple-400" />}
              {feature.icon === "gauge" && <Gauge className="w-6 h-6 text-amber-400" />}
              {feature.icon === "line-chart" && <LineChart className="w-6 h-6 text-indigo-400" />}
              {feature.icon === "zap" && <Zap className="w-6 h-6 text-rose-400" />}
              {feature.icon === "shield" && <Shield className="w-6 h-6 text-blue-400" />}
            </div>
            <h3 class="text-xl text-slate-900 font-semibold mb-2 dark:text-white">{feature.title}</h3>
            <p class="text-slate-600 dark:text-slate-400">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
