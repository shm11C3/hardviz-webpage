---
import { Cpu, Gauge, LineChart, MemoryStick, Shield, Zap } from "lucide-react";
import { useTranslations } from "../lib/i18n/astro-i18n";

// Get the current language from localStorage or default to 'en'
const currentLang = () => {
  if (typeof localStorage !== 'undefined') {
    return localStorage.getItem('i18nextLng') || 'en';
  }
  return 'en';
};

const t = useTranslations(currentLang());

const features = [
  {
    icon: "cpu",
    titleKey: "features.cpu.title",
    descriptionKey: "features.cpu.description",
  },
  {
    icon: "memory",
    titleKey: "features.memory.title",
    descriptionKey: "features.memory.description",
  },
  {
    icon: "gauge",
    titleKey: "features.gpu.title",
    descriptionKey: "features.gpu.description",
  },
  {
    icon: "line-chart",
    titleKey: "features.performance.title",
    descriptionKey: "features.performance.description",
  },
  {
    icon: "zap",
    titleKey: "features.lightweight.title",
    descriptionKey: "features.lightweight.description",
  },
  {
    icon: "shield",
    titleKey: "features.opensource.title",
    descriptionKey: "features.opensource.description",
  },
];
---

<section class="py-20 bg-slate-50 dark:bg-slate-900" id="features">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 dark:text-white" data-i18n-key="features.title">{t("features.title")}</h2>
      <p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto text-lg" data-i18n-key="features.subtitle">
        {t("features.subtitle")}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        features.map((feature) => (
          <div class="bg-white dark:bg-slate-800 p-6 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 hover:shadow-md transition-all">
            <div class="w-12 h-12 flex items-center justify-center bg-slate-100 dark:bg-slate-700 rounded-lg mb-4">
              {feature.icon === "cpu" && <Cpu className="w-6 h-6 text-cyan-400" />}
              {feature.icon === "memory" && <MemoryStick className="w-6 h-6 text-purple-400" />}
              {feature.icon === "gauge" && <Gauge className="w-6 h-6 text-amber-400" />}
              {feature.icon === "line-chart" && <LineChart className="w-6 h-6 text-indigo-400" />}
              {feature.icon === "zap" && <Zap className="w-6 h-6 text-rose-400" />}
              {feature.icon === "shield" && <Shield className="w-6 h-6 text-blue-400" />}
            </div>
            <h3 class="text-xl font-semibold mb-2 dark:text-white" data-i18n-key={feature.titleKey}>{t(feature.titleKey)}</h3>
            <p class="text-slate-600 dark:text-slate-400" data-i18n-key={feature.descriptionKey}>{t(feature.descriptionKey)}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
