---
import { Minus, Square, X } from "lucide-react";
import Dashboard from "./Dashboard.tsx";
import AppIcon from "../assets/app-icon.png";
import { Image } from "astro:assets";
---

<div class="overflow-hidden rounded-xl border border-slate-700 bg-[#1a2234] shadow-2xl">
  {/* Windows風のタイトルバー */}
  <div class="flex items-center justify-between border-slate-700 border-b bg-[#141b2d] px-4 py-2">
    <div class="flex items-center">
      <Image
        src={AppIcon}
        alt="HardwareVisualizer Icon"
        class="h-6 w-6 mr-2"
        loading="eager"
      />
      <span class="text-slate-200 text-sm">HardwareVisualizer</span>
    </div>
    <div class="flex">
      <button
        type="button"
        class="p-1.5 text-slate-400 transition-colors hover:bg-slate-700 hover:text-white"
        tabindex={-1}
        title="This button is for demonstration only (Minimize)"
      >
        <Minus className="h-4 w-4" />
      </button>
      <button
        type="button"
        class="p-1.5 text-slate-400 transition-colors hover:bg-slate-700 hover:text-white"
        tabindex={-1}
        title="This button is for demonstration only (Maximize)"
      >
        <Square className="h-4 w-4" />
      </button>
      <button
        type="button"
        class="p-1.5 text-slate-400 transition-colors hover:bg-red-600 hover:text-white"
        tabindex={-1}
        title="This button is for demonstration only (Close)"
      >
        <X className="h-4 w-4" />
      </button>
    </div>
  </div>
  <Dashboard client:load />
</div>
